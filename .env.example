# Environment template for development and production
# Copy this file to .env and fill in your actual values

# ========================
# Database Configuration
# ========================
# Use 'sqlite' for local development or 'postgres' for production
DATABASE_TYPE=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=agent_service
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ========================
# Service Configuration
# ========================
# Host and port for the FastAPI service
HOST=0.0.0.0
PORT=8080

# Service URL for Streamlit client to connect to
AGENT_URL=http://localhost:8080

# ========================
# LLM Provider Configuration
# ========================
# Choose one or more LLM providers by setting their API keys

# OpenAI
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google
# GOOGLE_API_KEY=your_google_api_key_here
# GOOGLE_LLM_MODEL_ID=your_google_model_id

# AWS Bedrock (requires AWS credentials)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Groq
# GROQ_API_KEY=your_groq_api_key_here

# Ollama (self-hosted)
# OLLAMA_MODEL=mistral
# OLLAMA_BASE_URL=http://localhost:11434

# ========================
# Search & Tools Configuration
# ========================
# DuckDuckGo Search (free, no key required)
# DDG_SEARCH_ENABLED=true

# Tavily Search (requires API key)
# TAVILY_API_KEY=your_tavily_api_key_here

# ========================
# Observability & Monitoring
# ========================
# LangSmith - for tracing and monitoring LangGraph workflows
# LANGSMITH_API_KEY=your_langsmith_api_key_here
# LANGSMITH_PROJECT=your_project_name

# LangFuse - for production observability
# LANGFUSE_SECRET_KEY=your_langfuse_secret_key
# LANGFUSE_PUBLIC_KEY=your_langfuse_public_key

# ========================
# Development Settings
# ========================
# Set to 'development' for verbose logging, 'production' for minimal logs
ENVIRONMENT=development

# Enable debug logging
DEBUG=false

# ========================
# Redis Configuration (optional)
# ========================
# For distributed caching and session management in production
# REDIS_URL=redis://localhost:6379/0

# ========================
# Credentials Path (Development Only)
# ========================
# Path to local credentials file for development
# DO NOT use this in production - use environment variables or secrets manager instead
# CREDENTIALS_PATH=/privatecredentials/credentials.json
